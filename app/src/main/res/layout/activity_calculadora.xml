<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.johames.calculadora.Calculadora"
    android:background="#0e0709">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:focusable="false"
        android:weightSum="1">

        <TextView
            android:layout_width="272dp"
            android:layout_height="58dp"
            android:id="@+id/txtNumero"
            android:layout_gravity="center_vertical"
            android:textColor="#000"
            android:background="#fff"
            android:textStyle="bold|italic"
            android:textSize="45dp"
            android:gravity="fill"
            android:allowUndo="false"
            android:autoText="false"
            android:editable="false"
            android:layout_weight="0.44" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp">

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:id="@+id/Btn9"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onClickBtn9" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/Btn8"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onClickBtn8" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:id="@+id/Btn7"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onClickBtn7" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:id="@+id/Btn6"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onClickBtn6" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:id="@+id/Btn5"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onClickBtn5" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/Btn4"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onClickBtn4" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/Btn3"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onClickBtn3" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/Btn2"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onClickBtn2" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/Btn1"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onClickBtn1" />

        <Button
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/Btn0"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:onClick="onClickBtn0" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:id="@+id/BtnEntre"
            android:layout_row="2"
            android:layout_column="3"
            android:text="/"
            android:onClick="onClickDivision" />

        <Button
            android:layout_width="57dp"
            android:layout_height="96dp"
            android:id="@+id/BtnLimpia"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_rowSpan="2"
            android:singleLine="false"
            android:text="←"
            android:onClick="onClickLimpia" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:id="@+id/BtnPor"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="onClickMultiplicacion" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/BtnMenos"
            android:layout_row="4"
            android:layout_column="3"
            android:onClick="onClickResta" />

        <Button
            android:layout_width="57dp"
            android:layout_height="97dp"
            android:text="="
            android:id="@+id/BtnIgual"
            android:layout_row="4"
            android:layout_column="4"
            android:layout_rowSpan="2"
            android:singleLine="false"
            android:onClick="onClickIgual" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="."
            android:id="@+id/BtnPunto"
            android:layout_row="5"
            android:layout_column="2"
            android:onClick="onClickBtnPunto" />

        <Button
            android:layout_width="57dp"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/BtnMas"
            android:layout_row="5"
            android:layout_column="3"
            android:onClick="onClickSuma" />

    </GridLayout>

</RelativeLayout>
